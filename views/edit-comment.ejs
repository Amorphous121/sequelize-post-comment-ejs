<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/_head.ejs') %> 
    <title>Edit Comment</title>
</head>
<body>
    <%- include('./partials/_header.ejs') %>

    <div class="container d-flex align-items-center justify-content-center">
        <div class="jumbotron bg-dark text-white w-50">

            <% if (typeof error != 'undefined') { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong><%= error %> </strong> 
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
            <% } %>

            <h1 class="">Edit Comment</h1>
            <form action="/comments/update/<%=comment.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input id="comment" class="form-control" type="text" required name="comment" value="<%= comment.comment %> ">
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
                <a href="/posts/allpost" class="btn btn-danger">Cancle</a>
            </form>
        </div>
    </div>

    <%- include('./partials/_footer.ejs') %> 

</body>
</html>